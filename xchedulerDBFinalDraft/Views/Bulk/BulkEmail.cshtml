
@{
    ViewBag.Title = "BulkEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BulkEmail</h2>
<div class="row">
    @using (Html.BeginForm("BulkEmail", "Bulk", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.Label("User Email Addresses:")
            <p>@string.Join(", ", ViewBag.UserEmails)</p>
        </div>
        <div class="form-group">
            @Html.Label("Recipient Email Addresses (comma-separated):")
            @Html.TextArea("RecipientEmails", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Email Subject:")
            @Html.TextBox("EmailSubject", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Attachment (optional):")
            <input type="file" name="file" />
        </div>

        <div class="form-group">
            @Html.Label("Email Content:")
            @Html.TextArea("EmailContent", null, new { @class = "form-control", @id = "emailContent" })
        </div>

        <div class="form-group">
            <label>Email Content Preview:</label>
            <div id="emailPreview" class="border p-2" style="min-height: 100px;"></div>
        </div>

        <button type="submit" class="btn btn-primary">Send Bulk Email</button>
    }

    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script>
    function updateEmailPreview() {
        var emailContent = $("#emailContent").val();
        $("#emailPreview").html(emailContent);
    }

    $("#emailContent").on("input", updateEmailPreview);

    updateEmailPreview();
</script>